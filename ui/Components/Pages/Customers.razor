@page "/customers"

@using System.Timers
@using ui.Dtos.Customer

@rendermode InteractiveServer

@inject HttpClient Http

<PageTitle>Clientes</PageTitle>

<h1>Clientes</h1>

<div class="d-flex justify-content-between mb-3">
    <div>
        <label for="nameFilter">Filtrar por nombre:</label>
        <input id="nameFilter" type="text" value="@nameFilter" @oninput="OnNameFilterChanged" class="form-control" />
    </div>
    <div class="text-end">
        <a class="btn btn-primary" href="/customer">Crear cliente</a>
    </div>
</div>

@if (customers == null)
{
    <p><em>Cargando...</em></p>
}
else if (customers.Count == 0)
{
    <p><em>Sin resultados</em></p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>Identificador</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <a class="btn btn-primary" href="/customer/@customer.Id">Editar</a>
                        <button class="btn btn-danger ms-2" @onclick="() => DeleteCustomer(customer)">Borrar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
    @if (hasMoreItems)
        {
            <button class="btn btn-secondary" @onclick="LoadMoreCustomers">Cargar más</button>
        }
    </div>
}

@code {
    private List<CustomerDto> customers = new List<CustomerDto>();
    private string nameFilter = string.Empty;
    private int pageNumber = 1;
    private const int pageSize = 5;
    private bool hasMoreItems = true;
    private Timer debounceTimer = new Timer(1000) { AutoReset = false };

    protected override async Task OnInitializedAsync()
    {
        debounceTimer.Elapsed += async (_, __) =>
        {
            await InvokeAsync(async () =>
    {
    await LoadCustomersAsync(resetPagination: true);
    StateHasChanged();
            });
        };

        await LoadCustomersAsync();
    }

    private async Task LoadCustomersAsync(bool resetPagination = false)
    {
        if (resetPagination)
        {
            pageNumber = 1;
            hasMoreItems = true;
            customers.Clear();
        }

        try
        {
            string query =
            $"/api/customer?Name={Uri.EscapeDataString(nameFilter)}&IsDescending=true&PageNumber={pageNumber}&PageSize={pageSize}";
            var result = await Http.GetFromJsonAsync<CustomerDto[]>(query);

            if (result != null && result.Length != 0)
            {
                customers.AddRange(result);
            }
            else
            {
                hasMoreItems = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al obtener los clientes: {ex.Message}");
        }
    }

    private async Task LoadMoreCustomers()
    {
        pageNumber++;
        await LoadCustomersAsync();
    }

    private async Task DeleteCustomer(CustomerDto customer)
    {
        try
        {
            var response = await Http.DeleteAsync($"/api/customer/{customer.Id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadCustomersAsync(resetPagination: true);
            }
            else
            {
                Console.WriteLine("Error al borrar el cliente");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al borrar el cliente: {ex.Message}");
        }
    }

    private void OnNameFilterChanged(ChangeEventArgs e)
    {
        nameFilter = e.Value?.ToString() ?? string.Empty;
        debounceTimer.Stop();
        debounceTimer.Start();
    }
}
